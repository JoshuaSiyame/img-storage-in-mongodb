<%- include("../utils/header.ejs") %>
<main>
    <h2>Upload image.</h2>
    <form action="/upload" method="post" enctype="multipart/form-data">        
        <div class="form-group">
            <label for="image-name">Description:</label>
            <textarea name="description" placeholder="image description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="image-name">Image:</label>
            <input type="file" name="image" placeholder="image name" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" value="upload" class="btn-primary">
        </div>
    </form>
</main>
